{
  "name": "cute-pomodoro-timer",
  "author": "aliciachickenwings",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "main": "public/electron.js",
  "scripts": {
    "dev": "vite",
    "start": "electron .",
    "build": "vite build && electron-builder",
    "lint": "eslint .",
    "preview": "vite preview",
    "dist": "electron-builder"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.7.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "concurrently": "^9.2.0",
    "cross-env": "^10.0.0",
    "electron": "^37.2.5",
    "electron-builder": "^26.0.12",
    "eslint": "^9.30.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "vite": "^7.0.4",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.AliciaChickenWings.CutePomodoroTimer",
    "productName": "Cute Pomodoro Timer",
      "files": [
    "dist/**/*",
    "public/**/*",
    "!public/electron.js"
    ],
      "directories": {
    "output": "release"
    },
    "win": {
      "target": "nsis",
      "icon": "public/app.ico",
      "publisherName": "AliciaChickenWings" 
    },
    "mac": {
      "target": "dmg",
      "icon": "public/app.icns",
      "category": "public.app-category.productivity",
  "hardenedRuntime": true
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/app.png"
    },
      "publish": {
        "provider": "github",
        "owner": "AachalShrestha",
        "repo": "Pomodoro-timer-"
      }
  }
}
